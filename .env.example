# Environment variables template
# Copy this file to .env and fill in your actual values

# ===================
# API CREDENTIALS
# ===================

# Breeze Connect API Credentials
BREEZE_API_KEY=your_api_key_here
BREEZE_API_SECRET=your_api_secret_here
BREEZE_SESSION_TOKEN=your_session_token_here

# Alpha Vantage API (if needed)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# ===================
# APPLICATION SETTINGS
# ===================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Data storage paths
DATA_BASE_PATH=./data
LOGS_BASE_PATH=./logs
MODELS_BASE_PATH=./models

# ===================
# COMPLIANCE SETTINGS
# ===================

# Compliance enforcement level (strict, moderate, lenient, monitoring)
COMPLIANCE_LEVEL=moderate

# Enable/disable rate limiting
ENABLE_RATE_LIMITING=true

# Enable/disable compliance monitoring
ENABLE_COMPLIANCE_MONITORING=true

# ===================
# MODEL CONFIGURATION
# ===================

# Default model to use
DEFAULT_MODEL=RandomForestRegressor

# Enable hyperparameter tuning
ENABLE_HYPERPARAMETER_TUNING=true

# Training data split ratio
TRAIN_TEST_SPLIT=0.8

# Random seed for reproducibility
RANDOM_SEED=42

# ===================
# CACHE SETTINGS
# ===================

# Enable data caching
ENABLE_CACHING=true

# Cache expiry time in hours
CACHE_EXPIRY_HOURS=24

# Max cache size in MB
MAX_CACHE_SIZE_MB=1000

# ===================
# MONITORING & ALERTS
# ===================

# Enable monitoring
ENABLE_MONITORING=true

# Alert thresholds
API_ERROR_RATE_THRESHOLD=0.1
RESPONSE_TIME_THRESHOLD_MS=5000
COMPLIANCE_SCORE_THRESHOLD=0.9

# ===================
# DEVELOPMENT SETTINGS
# ===================

# Enable debug mode
DEBUG_MODE=false

# Enable test mode (uses mock data)
TEST_MODE=false

# Profile performance
ENABLE_PROFILING=false
