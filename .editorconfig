# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyw}]
indent_size = 4
max_line_length = 88

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,yaml,yml}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
indent_size = 2

[*.{html,htm,xml}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{ini,cfg}]
indent_size = 4

[requirements*.txt]
indent_size = 4

[*.toml]
indent_size = 4

[Dockerfile*]
indent_size = 2
